<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A05033" /> <!-- Darker shade for pressed state -->
            <corners android:radius="30dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C16244" /> <!-- Default button color -->
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>
