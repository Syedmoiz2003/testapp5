<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base compact theme -->
    <style name="Base.Theme.Testapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Global compact adjustments -->
        <item name="buttonStyle">@style/CompactButtonStyle</item>
        <item name="imageButtonStyle">@style/CompactImageButtonStyle</item>
    </style>

    <!-- App theme -->
    <style name="Theme.Testapp" parent="Base.Theme.Testapp">
        <!-- Optional: Customize specific colors -->
        <item name="colorPrimary">#6200EE</item> <!-- Purple -->
        <item name="colorSecondary">#03DAC5</item> <!-- Teal -->
    </style>

    <!-- Compact Button Style -->
    <style name="CompactButtonStyle" parent="Widget.Material3.Button">
        <!-- Reduce padding -->
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <!-- Smaller icon size for buttons -->
        <item name="iconSize">18dp</item>
        <!-- Reduced text size -->
        <item name="android:textSize">12sp</item>
        <!-- Custom elevation -->
        <item name="android:elevation">2dp</item>
        <!-- Rounded corners -->
        <item name="cornerRadius">6dp</item>
    </style>

    <!-- Compact Image Button Style -->
    <style name="CompactImageButtonStyle" >
        <!-- Remove unnecessary padding -->
        <item name="android:padding">4dp</item>
        <!-- Adjust icon size -->
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:scaleType">centerInside</item>
        <!-- Custom background tint -->
        <item name="backgroundTint">#E0E0E0</item>
    </style>

    <!-- Compact Toolbar Style -->
    <style name="CompactToolbarStyle" parent="Widget.Material3.Toolbar">
        <!-- Reduced toolbar height -->
        <item name="android:height">48dp</item>
        <item name="titleTextAppearance">@style/CompactToolbarTitle</item>
    </style>

    <!-- Compact Toolbar Title -->
    <style name="CompactToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Smaller title text -->
        <item name="android:textSize">16sp</item>
    </style>
</resources>
