<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img3">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="Skip"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="30dp"
            android:text="Welcome back"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <ImageButton
            android:id="@+id/Ibutton1"
            android:layout_width="300dp"
            android:layout_height="317dp"
            android:layout_below="@id/text2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            style="@style/CompactImageButtonStyle"
            android:background="@color/white"
            android:src="@drawable/img2" />

        <EditText
            android:id="@+id/EditText1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/Ibutton1"
            android:layout_marginTop="20dp"
            android:hint="Mobile Number*"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="number"
            android:background="@drawable/edittext_border"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/Button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditText1"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded"
            android:textColor="@color/white"
            android:text="Login"
            android:inputType="number"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
             />


        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/Button1"
            android:layout_marginTop="15dp"
            android:text="Dont'n have an account? Sign up"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/text3"
            android:text="_______________OR_______________"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />
        <ImageButton
            android:id="@+id/Ibuttonn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            style="@style/CompactImageButtonStyle"
            android:src="@drawable/google"
            android:backgroundTint="@color/white"
            />


        <ImageButton
            android:id="@+id/Ibuttonm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="180dp"
            android:src="@drawable/facebook"
            style="@style/CompactImageButtonStyle"
            android:backgroundTint="@color/white"
            />
        <ImageButton
            android:id="@+id/Ibuttonk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="310dp"
            android:src="@drawable/apple"
            style="@style/CompactImageButtonStyle"
            android:backgroundTint="@color/white"
            />








    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
